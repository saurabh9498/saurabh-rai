# Multi-Agent AI System - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# LLM Configuration
# ============================================
LLM_PROVIDER=openai                    # openai, anthropic, or local
LLM_MODEL=gpt-4-turbo                  # Model name
LLM_TEMPERATURE=0.1                    # Default temperature
LLM_MAX_TOKENS=4096                    # Default max tokens

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ============================================
# Vector Store Configuration
# ============================================
VECTOR_STORE=chromadb                  # chromadb, pinecone, or faiss
CHROMA_PERSIST_DIR=./data/chroma       # ChromaDB persistence directory
COLLECTION_NAME=knowledge_base         # Default collection name

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENV=us-east-1-aws
PINECONE_INDEX=multi-agent-index

# ============================================
# Embedding Configuration
# ============================================
EMBEDDING_MODEL=text-embedding-3-small # OpenAI embedding model
EMBEDDING_DIMENSION=1536               # Embedding dimension
EMBEDDING_BATCH_SIZE=100               # Batch size for embedding

# ============================================
# RAG Configuration
# ============================================
CHUNK_SIZE=512                         # Document chunk size
CHUNK_OVERLAP=50                       # Overlap between chunks
TOP_K_RETRIEVAL=10                     # Number of documents to retrieve
RERANK_TOP_K=5                         # Number of documents after reranking
USE_HYBRID_SEARCH=true                 # Enable hybrid (semantic + keyword) search
SEMANTIC_WEIGHT=0.7                    # Weight for semantic search
KEYWORD_WEIGHT=0.3                     # Weight for keyword search

# ============================================
# Agent Configuration
# ============================================
MAX_ITERATIONS=10                      # Max agent iterations
AGENT_TIMEOUT=60                       # Agent timeout in seconds
ENABLE_TRACING=true                    # Enable execution tracing
PARALLEL_EXECUTION=false               # Enable parallel agent execution

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0                       # API host
API_PORT=8000                          # API port
API_DEBUG=false                        # Debug mode
CORS_ORIGINS=*                         # Allowed CORS origins
RATE_LIMIT=100                         # Requests per minute

# ============================================
# Application Configuration
# ============================================
ENVIRONMENT=development                # development, staging, production
LOG_LEVEL=INFO                         # DEBUG, INFO, WARNING, ERROR

# ============================================
# External Services (Optional)
# ============================================
# Web Search API
SERPER_API_KEY=your-serper-api-key     # For web search functionality

# Database (if using external database)
DATABASE_URL=postgresql://user:pass@localhost:5432/multiagent

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# ============================================
# Monitoring (Optional)
# ============================================
# LangSmith Tracing
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=multi-agent-system

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn
