# =============================================================================
# GPU ML Pipeline Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment

# -----------------------------------------------------------------------------
# GPU Configuration
# -----------------------------------------------------------------------------
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all

# -----------------------------------------------------------------------------
# Model Paths
# -----------------------------------------------------------------------------
MODEL_PATH=/app/engines/model.engine
ONNX_PATH=/app/models/model.onnx
MODEL_REPOSITORY=/app/model_repository

# -----------------------------------------------------------------------------
# Inference Settings
# -----------------------------------------------------------------------------
MAX_BATCH_SIZE=32
PRECISION=fp16
ENABLE_DYNAMIC_BATCHING=true
MAX_QUEUE_DELAY_MS=100

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=1
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Triton Server
# -----------------------------------------------------------------------------
TRITON_URL=localhost:8001
TRITON_PROTOCOL=grpc

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus

# -----------------------------------------------------------------------------
# Cache
# -----------------------------------------------------------------------------
TIMING_CACHE_PATH=/app/cache/timing.cache
CALIBRATION_CACHE_PATH=/app/cache/calibration.cache

# -----------------------------------------------------------------------------
# Development
# -----------------------------------------------------------------------------
DEBUG=false
PROFILE=false
