# =============================================================================
# Conversational AI Assistant - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env to version control

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
ENV=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, console
LOG_FORMAT=console

# Application version (for metrics/logging)
APP_VERSION=1.0.0

# =============================================================================
# API Server Settings
# =============================================================================

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Number of worker processes (production)
WORKERS=4

# Request timeout (seconds)
REQUEST_TIMEOUT=60

# Maximum request body size (bytes)
MAX_REQUEST_SIZE=10485760

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Authentication
# =============================================================================

# API key for authentication (generate a secure random string)
API_KEY=your-secure-api-key-here

# JWT secret for WebSocket authentication
JWT_SECRET=your-jwt-secret-here

# JWT token expiration (seconds)
JWT_EXPIRATION=3600

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# Redis connection pool size
REDIS_POOL_SIZE=10

# Redis connection timeout (seconds)
REDIS_TIMEOUT=5

# Session TTL (seconds)
SESSION_TTL=3600

# =============================================================================
# ASR (Automatic Speech Recognition) Settings
# =============================================================================

# Whisper model size: tiny, base, small, medium, large
ASR_MODEL_SIZE=base

# ASR language (ISO 639-1 code)
ASR_LANGUAGE=en

# ASR device: cpu, cuda, cuda:0, cuda:1
ASR_DEVICE=cpu

# Maximum audio length (seconds)
MAX_AUDIO_LENGTH=30

# Audio sample rate (Hz)
AUDIO_SAMPLE_RATE=16000

# Voice Activity Detection threshold (0.0 - 1.0)
VAD_THRESHOLD=0.5

# Enable streaming transcription
ENABLE_STREAMING_ASR=true

# =============================================================================
# NLU (Natural Language Understanding) Settings
# =============================================================================

# Intent classifier model
NLU_INTENT_MODEL=distilbert-base-uncased

# Entity extractor model
NLU_ENTITY_MODEL=en_core_web_sm

# NLU device: cpu, cuda
NLU_DEVICE=cpu

# Intent confidence threshold
INTENT_THRESHOLD=0.5

# Entity confidence threshold
ENTITY_THRESHOLD=0.7

# Maximum input length (tokens)
MAX_INPUT_LENGTH=512

# =============================================================================
# Dialog Management Settings
# =============================================================================

# Maximum conversation turns
MAX_TURNS=20

# Context window size (turns to keep)
CONTEXT_WINDOW=5

# Conversation timeout (seconds)
CONVERSATION_TIMEOUT=1800

# Enable LLM fallback for complex responses
ENABLE_LLM_FALLBACK=false

# LLM API key (if using external LLM)
LLM_API_KEY=

# LLM model name
LLM_MODEL=gpt-3.5-turbo

# =============================================================================
# TTS (Text-to-Speech) Settings
# =============================================================================

# Enable TTS
ENABLE_TTS=true

# TTS model
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# TTS device: cpu, cuda
TTS_DEVICE=cpu

# TTS sample rate (Hz)
TTS_SAMPLE_RATE=22050

# Default voice
TTS_VOICE=default

# Speech speed multiplier (0.5 - 2.0)
TTS_SPEED=1.0

# Enable TTS caching
ENABLE_TTS_CACHE=true

# TTS cache size (number of entries)
TTS_CACHE_SIZE=1000

# =============================================================================
# GPU Settings
# =============================================================================

# Enable GPU acceleration
USE_GPU=false

# CUDA visible devices
CUDA_VISIBLE_DEVICES=0

# GPU memory fraction (0.0 - 1.0)
GPU_MEMORY_FRACTION=0.8

# =============================================================================
# Observability
# =============================================================================

# Enable Prometheus metrics
ENABLE_METRICS=true

# Metrics port
METRICS_PORT=8000

# Enable request tracing
ENABLE_TRACING=false

# Jaeger agent host (for tracing)
JAEGER_AGENT_HOST=localhost

# Jaeger agent port
JAEGER_AGENT_PORT=6831

# =============================================================================
# Feature Flags
# =============================================================================

# Enable WebSocket streaming
ENABLE_STREAMING=true

# Enable sentiment analysis
ENABLE_SENTIMENT=true

# Enable conversation logging
ENABLE_CONVERSATION_LOGGING=true

# Enable A/B testing
ENABLE_AB_TESTING=false

# =============================================================================
# External Services
# =============================================================================

# Weather API (for weather intents)
WEATHER_API_KEY=
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# News API (for news intents)
NEWS_API_KEY=
NEWS_API_URL=https://newsapi.org/v2

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable hot reload
RELOAD=true

# Disable authentication (development only!)
DISABLE_AUTH=false

# Mock external services
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# Docker / Deployment
# =============================================================================

# Docker image version
VERSION=latest

# Model cache path (Docker volume mount)
MODEL_CACHE_PATH=./models

# Development source mount (set to ./src for live reload)
DEV_MOUNT=

# Nginx ports
HTTP_PORT=80
HTTPS_PORT=443

# Redis commander port
REDIS_COMMANDER_PORT=8081

# Prometheus port
PROMETHEUS_PORT=9090

# Grafana port
GRAFANA_PORT=3000

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
