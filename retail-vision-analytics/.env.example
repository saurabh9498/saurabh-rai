# =============================================================================
# Retail Vision Analytics - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO

# Device identification
DEVICE_ID=edge-device-001
STORE_ID=store-001

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# API Authentication (generate with: openssl rand -hex 32)
API_SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# -----------------------------------------------------------------------------
# Database - TimescaleDB
# -----------------------------------------------------------------------------
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=retail_analytics
TIMESCALE_USER=retail_user
TIMESCALE_PASSWORD=your-db-password

# -----------------------------------------------------------------------------
# Cache - Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# -----------------------------------------------------------------------------
# Message Queue - Kafka (Optional)
# -----------------------------------------------------------------------------
KAFKA_ENABLED=false
KAFKA_BROKERS=localhost:9092

# -----------------------------------------------------------------------------
# Object Storage - MinIO/S3
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=retail-vision
MINIO_SECURE=false

# -----------------------------------------------------------------------------
# Cloud Sync
# -----------------------------------------------------------------------------
CLOUD_ENABLED=true
CLOUD_HOST=api.retailvision.cloud
CLOUD_PORT=443
CLOUD_API_KEY=your-cloud-api-key

# -----------------------------------------------------------------------------
# Alert Webhooks
# -----------------------------------------------------------------------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
TEAMS_WEBHOOK_URL=
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@retailvision.cloud

# -----------------------------------------------------------------------------
# GPU & Inference
# -----------------------------------------------------------------------------
CUDA_VISIBLE_DEVICES=0
TRT_PRECISION=fp16
MAX_BATCH_SIZE=16
INFERENCE_INTERVAL=1

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Jetson-Specific (Edge Deployment)
# -----------------------------------------------------------------------------
JETSON_POWER_MODE=MAXN
JETSON_FAN_SPEED=100
ENABLE_DLA=false
DLA_CORE=0
