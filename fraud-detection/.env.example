# =============================================================================
# Fraud Detection System - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=INFO

# =============================================================================
# Redis (Feature Store)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=10

# =============================================================================
# Kafka (Stream Processing)
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_INPUT_TOPIC=transactions
KAFKA_OUTPUT_TOPIC=fraud-scores
KAFKA_CONSUMER_GROUP=fraud-detector
KAFKA_MAX_POLL_RECORDS=500

# =============================================================================
# Model Configuration
# =============================================================================
MODEL_PATH=./models
ENABLE_ONLINE_LEARNING=true
MODEL_UPDATE_FREQUENCY=1h

# =============================================================================
# Thresholds
# =============================================================================
THRESHOLD_APPROVE=0.3
THRESHOLD_REVIEW=0.7
THRESHOLD_DECLINE=0.9

# =============================================================================
# Monitoring
# =============================================================================
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
DRIFT_DETECTION_ENABLED=true
DRIFT_THRESHOLD=0.1

# =============================================================================
# Development
# =============================================================================
DEBUG=false
MOCK_REDIS=false
MOCK_KAFKA=false
